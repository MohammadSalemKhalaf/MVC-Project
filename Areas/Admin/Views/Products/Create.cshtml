@section title {
    <h1>Product</h1>
}
@section show {
                Addd Products
}
<form method="post" action="Create" enctype="multipart/form-data">
    <div class="card-body">

        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input type="text" class="form-control"  id="exampleInputEmail1" name="Name" placeholder="Enter Product Name">
        </div>

         <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input type="text"  class="form-control"  
            id="exampleInputEmail1" 
            name="Description"
            placeholder="Enter Description">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Price</label>
            <input type="text" class="form-control"  id="exampleInputEmail1" name="Price" placeholder="Price">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Quantity</label>
            <input type="text" class="form-control"  id="exampleInputEmail1" name="Quantity" placeholder="Enter Quantity">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Image</label>
            <input type="file" class="form-control"  id="exampleInputEmail1" name="Image" placeholder="upload Image">
        </div>
        <div class="form-group">
            <label>Categories</label>
        </div>

        <div class="form-group">

            <select name="CategoryId">
                @foreach (var category in ViewBag.Categories)
                {
                    <option class="form-control" value="@category.Id">@category.Name</option>
                }

            </select>
        </div>

        <div class="form-group">
            <button type="submit" mt-4 class="btn btn-primary">Submit</button>
        </div>
    </div>
    <!-- /.card-body -->


</form>